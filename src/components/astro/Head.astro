---
interface Props {
  description?: string;
  title: string;
  metaTitle: string | undefined;
}

import { SEO } from "astro-seo";

let { description, title, metaTitle } = Astro.props;
description ??=
  "Taking my own weird way through life with lots of sticks, and stones in the way.";
const origin = Astro.site?.origin;
const url = Astro.url;
---

<head>
  <SEO
    title={metaTitle || title}
    description={description}
    charset="utf-8"
    extend={{
      link: [
        {
          rel: "alternate",
          title: "AliciaBytes' Blog",
          href: `${origin}/rss.xml`,
          type: "application/rss+xml",
        },
      ],
      meta: [
        { name: "viewport", content: "width=device-width, initial-scale=1" },
        { name: "fediverse:creator", content: "@AliciaBytes@polycule.li" },
        { name: "robots", content: "noai, noimageai" },
        { name: "generator", content: Astro.generator },
        {
          name: "theme-color",
          content: "#1a202c",
          media: "(prefers-color-scheme: dark)",
        },
        {
          name: "theme-color",
          content: "#FFF",
          media: "(prefers-color-scheme: light)",
        },
      ],
    }}
    openGraph={{
      basic: {
        title: title,
        type: "website",
        image: `${origin}/opengraph.png`,
        url: url.href,
      },
      optional: {
        description: description,
        locale: "en",
        siteName: "AliciaBytes",
      },
    }}
    twitter={{
      card: "summary_large_image",
      site: "@AliciaBytes",
      creator: "@AliciaBytes",
      title: title,
      image: `${origin}/opengraph.png`,
      imageAlt:
        "2 pink caticors (cats with a rainbow colored horn like a unicorn) to either side, facing towards the middle. In the middle there's the cursive text 'AliciaBytes'",
      description: description,
    }}
  />
  <meta name="twitter:title" content={title} />
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:image" content={`${origin}/opengraph.png`} />
  <meta name="twitter:creator" content="@AliciaBytes" />
  <script>
    document.documentElement.classList.remove("no-js");
    document.documentElement.classList.add("js");
  </script>
  <script
    is:inline
    defer
    src="/umscript.js"
    data-website-id="2e2ca1dc-34f7-42e0-bedc-7a3927021b4e"></script>
</head>
