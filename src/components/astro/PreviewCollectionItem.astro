---
import render_markdown from "@src/utils/remark";
import PublishedUpdatedFragment from "./PublishedUpdatedFragment.astro";

const { id: slug } = Astro.props;
const { title, excerpt, publishedDate, lastUpdated } = Astro.props.data;
---

<article>
  <a href={`/${slug}/`} set:html={render_markdown(`### ${title} {#${slug}}`)} />
  <PublishedUpdatedFragment
    publishedDate={publishedDate}
    updated={lastUpdated}
  />
  <p set:html={excerpt} />
</article>

<style>
  @layer component {
    article {
      margin-top: 9px;
      display: grid;
      grid-template-columns: 1fr;
      gap: 6px;
    }

    article * {
      margin: 0;
    }
  }
</style>
