---
import Layout from "@src/layouts/Layout.astro";
import CollectionList from "@src/components/astro/CollectionList.astro";
import { slugify } from "@src/utils/slugify";

export async function getStaticPaths() {
  const collections = ["content"];
  return collections.map((entry) => ({
    params: { collection: slugify(entry) },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const title = entry[0].toUpperCase() + entry.slice(1);
---

<Layout
  title={`AliciaBytes' ${title}`}
  description={`All the entries of my ${entry} collection`}
>
  <h1>{title}</h1>
  <CollectionList collection={entry} header={false} />
</Layout>
