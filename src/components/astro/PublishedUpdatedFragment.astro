---
import { format } from "date-fns";

const { publishedDate, updated, class: className, ...rest } = Astro.props;
---

{
  publishedDate && (
    <div class={className} {...rest}>
      <span>
        Published:{" "}
        <time datetime={publishedDate.toISOString()}>
          {format(publishedDate, "dd MMMM yyyy")}
        </time>
      </span>
      {updated && (
        <>
          <span>
            Last Updated:
            <time datetime={updated.toISOString()}>
              {format(updated, "dd MMMM yyyy")}
            </time>
          </span>
        </>
      )}
    </div>
  )
}

<style>
  @layer component {
    div {
      display: flex;
      flex-direction: row;
      flex-wrap: wrap;
      column-gap: 18px;
      row-gap: 6px;
    }

    span {
      color: var(--color-subtext0);
      font-size: var(--size-font-subtext0);
    }
  }
</style>
