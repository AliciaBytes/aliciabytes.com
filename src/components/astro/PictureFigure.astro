---
const {
  caption,
  class: className,
  fallbackFormat = "jpg",
  formats = ["avif", "webp"],
  height,
  quality = "mid",
  src,
  width,
  ...rest
} = Astro.props;

import { Picture } from "astro:assets";
---

<figure>
  <Picture alt="" {fallbackFormat} {formats} {height} {quality} {src} {width} />
  <figcaption>{caption}</figcaption>
</figure>

<style>
  @layer component {
    figure {
      margin: 6px 0;
    }

    figcaption {
      width: 100%;
      padding: 0 2.5%;
      text-align: center;
      color: var(--color-subtext1);
    }
  }
</style>
