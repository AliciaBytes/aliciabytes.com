---
import { SectionDivider } from "nibbles-and-bites/astro";

const { class: className, title, url } = Astro.props;
const origin = Astro.site?.origin;
const reportURL = encodeURI(
  `https://github.com/AliciaBytes/aliciabytes.com/issues/new?template=broken-page.yml&title=Broken page: ${title}&url=${url}`
);
---

<footer class={className} id="footer">
  <SectionDivider />
  <div class="footer-sections">
    <div class="social-section">
      <a class="tap-target" rel="me" href="https://ice.polycule.li/@AliciaBytes"
        >Fediverse</a
      >
      <a class="tap-target" rel="me" href="https://www.twitch.tv/aliciabytes"
        >Twitch</a
      >
      <a class="tap-target" rel="me" href="https://github.com/AliciaBytes"
        >GitHub</a
      >
      <a class="tap-target" rel="me" href="https://www.youtube.com/@AliciaBytes"
        >YouTube</a
      >
      <a
        class="tap-target"
        rel="me"
        href="https://www.linkedin.com/in/aliciamiedl/">LinkedIn</a
      >
      <a class="tap-target" rel="me" href="mailto:contact@aliciabytes.com"
        >contact@aliciabytes.com</a
      >
    </div>
    <div class="footer-links">
      <a class="tap-target" href="/about/">About</a>
      <a class="tap-target" href="/now/">Now</a>
      <a class="tap-target" href="/recommendations/">Recommendations</a>
      <a class="tap-target" href="/rss.xml">RSS</a>
      <a class="tap-target" href="/pgp/">PGP</a>
    </div>
    <div class="footer-logistical">
      <a class="tap-target" rel="privacy-policy" href="/privacy-policy/"
        >Privacy Policy</a
      >
      <a class="tap-target" rel="privacy-policy" href="/cookie-policy/"
        >Cookie Policy</a
      >
      <a class="tap-target" href="/functionality-overview/"
        >Functionality Overview</a
      >
      <a class="tap-target" href="/colophon/">Colophon</a>
    </div>
  </div>
  <div class="banners">
    <a href={origin}>
      <img
        width="88"
        height="31"
        src="/88x31.webp"
        alt="A 88x31 button with the text 'AliciaBytes' at the bottom. At the top there is a rainbow unicorn/caticorn horn that becomes smaller towards the top right where it tip ends pointing towards the corner."
        decoding="async"
        fetchpriority="low"
        loading="lazy"
      />
    </a>
    <a href={origin}>
      <img
        width="88"
        height="31"
        src="/88x31-animated.webp"
        alt="A 88x31 button with the text 'AliciaBytes' at the bottom. At the top there is a rainbow unicorn/caticorn horn that becomes smaller towards the top right where it tip ends pointing towards the corner. The rainbow horn is animated slowly adding more and more of its rainbow segments until they all disappear at the end again."
        decoding="async"
        fetchpriority="low"
        loading="lazy"
      />
    </a>
  </div>
</footer>

<style>
  @layer component {
    @media print {
      footer {
        display: none;
      }
    }
    a {
      display: grid;
      place-content: center;
    }
    #report-page {
      color: var(--color-overlay0);
      margin: 9px 0;
    }
    .footer-sections {
      margin: 9px 0 9px 0;
      display: grid;
      gap: 12px;
      grid-template-columns: repeat(auto-fit, minmax(min(200px, 100%), 1fr));
    }

    .footer-sections > div {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 3px;
    }

    .banners {
      display: grid;
      margin: 0px auto 18px auto;
      grid-template-columns: 88px 88px;
      gap: 18px;
      align-items: center;
      justify-items: center;
    }
  }
</style>
